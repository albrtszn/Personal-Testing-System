<Window x:Class="Client.windows.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.windows"
        mc:Ignorable="d"
       Title="Авторизация" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="25" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="10">Введите пароль:</TextBlock>
        <PasswordBox x:Name="passBox" Grid.Row="1" MinWidth="250" FontSize="10"></PasswordBox>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" Width="50" FontSize="10" Height="25">OK</Button>
            <Button IsCancel="True" Width="85" Height="25" FontSize="10" Margin="10 0 0 0" Click="Button_Click">Отмена</Button>
        </WrapPanel>

    </Grid>
</Window>
