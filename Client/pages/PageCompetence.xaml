<Page x:Class="Client.pages.PageCompetence"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCompetence"
      Background="White">

    <Grid >
        <StackPanel>
            <TextBlock Text="Компетенции" HorizontalAlignment="Center" FontSize="20"/>
            <Grid Background="White" Margin="0 15 0 0">
                <ListView x:Name="listCompetence" FontSize="15" d:ItemsSource="{d:SampleData ItemCount=3}" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Идентификационный номер" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Наименование компетенции" DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
            
        </StackPanel>


    </Grid>
</Page>
